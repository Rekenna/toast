<div id="comment-form" class="comment-form">
  <h3 class="ui header">
    Add comment
  </h3>
  <form id="form" class="ui form" method="post" action="{{ site.url~'/wp-comments-post.php' }}">
    {% if user %}
      <input type="hidden" name="email" value="{{ user.email }}">
      <input type="hidden" name="author" value="{{ user.name }}">
      <input type="hidden" name="url" value="{{ user.link }}">
    {% else %}
      <div class="field">
        <label for="email">Email</label>
        <input required="required" name="email" type="text" id="email"/>
      </div>
      <div class="field">
          <label for="author">Username</label>
          <input required="required" name="author" type="text" id="author"/>
      </div>

      <div class="field">
        <label for="url">Url</label>
        <input name="url" id="url" type="text"/>
      </div>
    {% endif %}
    <div class="field">
      <textarea placeholder="Comment...." name="comment" cols="60" rows="3" id="comment"></textarea>
    </div>
    <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
    <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

    <div class="field">
      <button type="submit" name="Submit" class="ui button primary">Submit</button>
    </div>
  </div>
</form>
</div>
